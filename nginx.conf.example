server
{
    listen 80;
    listen 443 ssl http2;
    server_name app-ai.vid2plays.web.id;
    
    # Hapus baris root karena semua request akan diteruskan ke Node.js
    # root /www/wwwroot/aitryon/client/dist;

    # SSL Config (Tetap pertahankan ini dari aaPanel)
    include /www/server/panel/vhost/nginx/extension/app-ai.vid2plays.web.id/*.conf;
    include /www/server/panel/vhost/nginx/well-known/app-ai.vid2plays.web.id.conf;
    
    if ($server_port !~ 443){
        rewrite ^(/.*)$ https://$host$1 permanent;
    }

    ssl_certificate    /www/server/panel/vhost/cert/app-ai.vid2plays.web.id/fullchain.pem;
    ssl_certificate_key    /www/server/panel/vhost/cert/app-ai.vid2plays.web.id/privkey.pem;
    ssl_protocols TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_ciphers EECDH+CHACHA20:EECDH+CHACHA20-draft:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
    ssl_prefer_server_ciphers on;
    ssl_session_tickets on;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    add_header Strict-Transport-Security "max-age=31536000";
    error_page 497  https://$host$request_uri;

    # Error Pages
    error_page 404 /404.html;
    error_page 502 /502.html;

    # Forbidden files
    location ~ ^/(\.user.ini|\.htaccess|\.git|\.env|\.svn|\.project|LICENSE|README.md)
    {
        return 404;
    }

    # SSL Validation
    location ~ \.well-known{
        allow all;
    }

    # --- BAGIAN KRUSIAL ---
    # Komentari atau hapus blok static files bawaan aaPanel ini
    # Karena ini akan mencegah request gambar/js/css sampai ke Node.js Anda
    
    # location ~ .*\.(gif|jpg|jpeg|png|bmp|swf)$
    # {
    #    expires      30d;
    #    error_log /dev/null;
    #    access_log /dev/null;
    # }

    # location ~ .*\.(js|css)?$
    # {
    #    expires      12h;
    #    error_log /dev/null;
    #    access_log /dev/null; 
    # }
    # ----------------------

    # PROXY PASS (Semua traffic masuk ke sini)
    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    access_log  /www/wwwlogs/app-ai.vid2plays.web.id.log;
    error_log  /www/wwwlogs/app-ai.vid2plays.web.id.error.log;
}
